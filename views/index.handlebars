<div id="home">
  <nav class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="row">
          <div class="col-lg-6 d-flex align-items-center">
            <img class="popcorn" src="../assets/images/popcorn.png" alt="Popcorn">
            <h1 a href="/index">DASFLIX</h1>
          </div>
          <div class="col-lg-6 d-flex align-items-center justify-content-end">
            {{#if user}}
            <h2>This is our Home Page!</h2>
            <a href="/watchlists" class="btn btn-primary">Watchlist</a>
            <a href="/logout" class="btn btn-primary">Log Out</a>
            {{else}}
            <p>Please <a href="/login">log in</a>.</p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </nav>
  <section class="container-fluid p-5">

    <div id="showcase" class="row uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider>

      <ul id="movie-showcase-list" class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m">


        <p id="theData"></p>

        <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous
          uk-slider-item="previous"></a>
        <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next
          uk-slider-item="next"></a>

    </div>
    <div class="row" id="filters">
      <div class="col-lg-12 d-flex align-items-center">
        <a href="/users" class="btn btn-primary">Placeholder</a>
        <a href="/logout" class="btn btn-primary">Placeholder</a>
        <input type="text" placeholder="search by movie" id="submit-query">
        <input type="submit" id="submit">
      </div>
    </div>
    <div class="row" id="search">
      <div class="uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider>

        <ul id="bottom-movie-list" class="uk-slider-items uk-child-width-1-2 uk-child-width-1-3@s uk-child-width-1-4@m">

        </ul>

        <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous
          uk-slider-item="previous"></a>
        <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next
          uk-slider-item="next"></a>

      </div>
    </div>
  </section>
</div>

</div>